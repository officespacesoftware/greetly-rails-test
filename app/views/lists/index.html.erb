<h1>Lists</h1>

<table class="table table-hover">
  <tr>
    <th scope="col" >Title</th>
    <th scope="col" ></th>
    <th scope="col" ></th>
    <th scope="col" ></th>
  </tr>

<% @lists.each do |list| %>
  <tr>
    <td><%= list.title %></td>
    <td><%= link_to 'Show', list %></td>
    <td><%= link_to 'Edit', edit_list_path(list) %></td>
    <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

