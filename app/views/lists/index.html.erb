<h1>Lists</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col" class="h2">Title</th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>

<% @lists.each do |list| %>
  <tbody>
    <tr>
      <td class="h4"><%= list.title %></td>
      <td class="h4"><%= link_to 'Show', list %></td>
      <td class="h4"><%= link_to 'Edit', edit_list_path(list) %></td>
      <td class="h4"><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  </tbody>
<% end %>
</table>

<br />

<%= link_to 'New List', new_list_path, class: "btn btn-primary" %>
